@{
    ViewData["Title"] = "Home Page";
}


@model List<Product>

<h1>Ana Sayfa</h1>
<a class="btn btn-primary mb-5" asp-controller="Home" asp-action="Create" >Ekle</a>
<br />
<div class="row">
    @foreach (var item in Model)


    {
        <div class="col-lg-4">
            <div class="card" style="width: 18rem;">
                <img src="@item.ImageUrl"  style="height:14rem" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title"> @item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">@item.Price ₺</p>

                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
    }
</div>